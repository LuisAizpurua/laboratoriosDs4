@model PROYECTOMOISES.Models.Cuenta

@{
    ViewBag.Title = "Retirar Dinero";
}

<main>
    <div class="container mt-5">
        <h1>Retiro de Dinero</h1>
        <hr />

        @using (Html.BeginForm("Retirar", "Home", FormMethod.Post))
        {
            <div class="mb-3">
                @Html.LabelFor(m => m.IdCuenta, "Número de cuenta", htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.IdCuenta, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.IdCuenta, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Monto, "Monto a retirar", htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Monto, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Monto, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Retirar</button>
        }

        <div class="mt-3">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }
        </div>
    </div>
</main>
